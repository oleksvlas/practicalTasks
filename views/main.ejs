<!doctype html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>

<header>
    <a href="/serviceman/">main</a>
    <a href="/serviceman/create">create</a>
</header>

<body>

<h1>Servicemen</h1>
<div class="container">
    <div class="">
        <h1>MongoDB</h1>
        <div class="mongo">
            <% for (let i = 0; i < servicemenMongoDb.length; i++) {
                let serviceman = servicemenMongoDb[i] %>
            <%= i + 1 %>) ID-<%= serviceman.id %> <br>
            name: <%= serviceman.name %> <br>
            surname: <%= serviceman.surname %> <br>
            third name: <%= serviceman.thirdName %> <br>
            rank: <%= serviceman.rank %> <br>
            date of birth - <%= serviceman.dateOfBirth.toLocaleString() %> <br>

            <a href="/serviceman/<%= serviceman.id %>/type/mongodb">Переглянути</a>
            <hr>
            <br>
            <% } %>
        </div>
    </div>

    <div class="">
        <h1>Postgresql</h1>
        <div class="postgresql">
            <% for (let i = 0; i < servicemenPostgresql.length; i++) {
                let serviceman = servicemenPostgresql[i] %>
            <%= i + 1 %>) ID-<%= serviceman.id %> <br>
            name: <%= serviceman.name %> <br>
            surname: <%= serviceman.surname %> <br>
            third name: <%= serviceman.thirdName %> <br>
            rank: <%= serviceman.rank %> <br>
            date of birth - <%= serviceman.dateOfBirth.toLocaleString() %> <br>

            <a href="/serviceman/<%= serviceman.id %>/type/postgresql">Переглянути</a>
            <hr>
            <br>
            <% } %>
        </div>
    </div>
</div>

<hr>

<h1>Units</h1>
<div class="container">
    <div class="">
        <h1>MongoDb</h1>
        <div class="mongo">
            <% for(let i = 0; i < unitsMongoDb.length; i++) {
                let unit = unitsMongoDb[i] %>
            <%= i+1 %>) ID: <%= unit.id %> <br>
            name: <%= unit.name %> <br>
            <a href="/unit/<%= unit.id %>/type/mongodb">Переглянути</a> <br>
            <hr>
            <% } %>
        </div>

    </div>
    <div class="">
        <h1>Postgresql</h1>
        <div class="postgresql">
            <% for(let i = 0; i < unitsPostgresql.length; i++) {
                let unit = unitsPostgresql[i] %>
            <%= i+1 %>) ID: <%= unit.id %> <br>
            name: <%= unit.name %> <br>
            <a href="/unit/<%= unit.id %>/type/postgresql">Переглянути</a> <br>
            <hr>
            <% } %>
        </div>
    </div>
</div>

</body>
</html>

